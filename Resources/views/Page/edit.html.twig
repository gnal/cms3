{% extends 'MsiCmfBundle::layout.html.twig' %}

{% block title %}{{ 'Edit'|trans }} {{ admin.label }}{% endblock title %}

{% block content %}
    <ul class="nav nav-tabs" style="margin-left: -20px;margin-right: -20px;padding-left: 20px;">
        <li class="active"><a href="#blocks" data-toggle="tab">Blocks</a></li>
        <li><a href="#page" data-toggle="tab">Page</a></li>
    </ul>
    <form novalidate class="form-horizontal" action="{{ admin.genUrl('edit', {'id': admin.object.id}) }}" method="POST" {{ form_enctype(form) }}>
        {% include admin.getOption('form_template') %}
        <div class="form-actions">
            {% include 'MsiCmfBundle:Admin:edit_form_actions.html.twig' %}
        </div>
    </form>
{% endblock %}

{% block js %}
{{ parent() }}
{% include admin.container.getParameter('msi_cmf.tiny_mce') %}
<script>
    $('button.alt').on('click', function() {
        var $form = $(this).closest('form');
        $form.attr('action', $.parameterize($form.attr('action'), {'alt': true}));
    });
</script>
{% endblock js %}

{# could put delete button here #}
{#<a onclick="return confirm('Are you sure you want to delete this entry?');" class="btn pull-right" href="{{ admin.genUrl('delete', {'id': admin.object.id}) }}"><i class="icon-remove"></i></a>#}

{% block actions %}
{% if admin.object.id %}
    <a href="{{ path('msi_cmf_block_admin_new', {'parentId': admin.object.id}) }}" class="btn btn-success"><i class="icon-white icon-plus"></i> {{ 'Add'|trans }}</a>
{% endif %}
{% endblock actions %}
