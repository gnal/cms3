<div class="tab-content">
    <div class="tab-pane fade active in" id="main1">
        <fieldset class="well">
            <h4>Main</h4>
            {% if admin.container.parameter('msi_cmf.multisite') %}{{ form_row(form.site) }}{% endif %}
            {{ form_row(form.template) }}
            {{ form_row(form.published) }}
            {{ form_row(form.showTitle) }}
        </fieldset>
        {% for translation in form.translations %}
        <fieldset class="well">
            <h4>{{ translation.get('value').locale|trans|capitalize }}</h4>
            {{ form_row(translation.title) }}
        </fieldset>
        {% endfor %}
    </div>

    <div class="tab-pane fade" id="content2">
        {% for translation in form.translations %}
        <fieldset class="well">
            <h4>{{ translation.get('value').locale|trans|capitalize }}</h4>
            {{ form_row(translation.body) }}
        </fieldset>
        {% endfor %}
    </div>

    <div class="tab-pane fade" id="seo">
        {% for translation in form.translations %}
        <fieldset class="well">
            <h4>{{ translation.get('value').locale|trans|capitalize }}</h4>
            {{ form_row(translation.metaKeywords) }}
            {{ form_row(translation.metaDescription) }}
        </fieldset>
        {% endfor %}
    </div>

    <div class="tab-pane fade" id="admin">
        <fieldset class="well">
            {{ form_row(form.route) }}
            {{ form_row(form.css) }}
            {{ form_row(form.js) }}
        </fieldset>
    </div>
</div>

{{ form_rest(form) }}
