{% extends 'MsiCmfBundle::layout.html.twig' %}

{% block title %}{{ 'Add'|trans }} {{ admin.getLabel() }}{% endblock title %}

{% block page_title %}
    {{ 'Add'|trans }} {{ admin.getLabel() }}
{% endblock %}

{% block content %}
    <ul class="nav nav-tabs" style="margin-left: -20px;margin-right: -20px;padding-left: 20px;">
        <li class="active"><a href="#blocks" data-toggle="tab">Content</a></li>
        <li><a href="#page" data-toggle="tab">Settings</a></li>
    </ul>
    <form novalidate class="form-horizontal" action="{{ admin.genUrl('new') }}" method="POST" {{ form_enctype(form) }}>
        {% include admin.getOption('form_template') %}
        <div class="form-actions" style="margin-bottom: 0;">
            {% include 'MsiCmfBundle:Admin:new_form_actions.html.twig' %}
        </div>
    </form>
{% endblock %}

{% block js %}
{{ parent() }}
{% include admin.container.getParameter('msi_cmf.tiny_mce') %}
<script>
    $('button.alt').on('click', function() {
        var $form = $(this).closest('form');
        $form.attr('action', $.parameterize($form.attr('action'), {'alt': true}));
    });
</script>
{% endblock js %}

{% block actions %}
{% if admin.object.id %}
    <a href="{{ path('msi_cmf_block_admin_new', {'parentId': admin.object.id}) }}" class="btn btn-success"><i class="icon-white icon-plus"></i> {{ 'Add'|trans }}</a>
{% endif %}
{% endblock actions %}
