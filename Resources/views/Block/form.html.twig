{% form_theme form 'MsiCmfBundle:Form:form.html.twig' %}

{% if admin.object.id %}
    <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a href="#advanced" data-toggle="tab">{{ admin.container.get(admin.object.type).name|trans }}</a></li>
        <li><a href="#general" data-toggle="tab">{{ 'Settings'|trans }}</a></li>
        {% if app.user.isSuperAdmin %}<li><a href="#acl" data-toggle="tab">{{ 'ACL'|trans }}</a></li>{% endif %}
    </ul>

    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade" id="general">
            {{ form_row(form.name) }}
            {{ form_row(form.type) }}
            {{ form_row(form.slot) }}
            {{ form_row(form.pages) }}
        </div>
        {% if app.user.isSuperAdmin %}
        <div class="tab-pane fade" id="acl">
            {{ form_row(form.operators) }}
        </div>
        {% endif %}
        <div class="tab-pane fade active in" id="advanced">
            {{ form_rest(form) }}
        </div>
    </div>
{% else %}
    {{ form_row(form.name) }}
    {{ form_row(form.type) }}
    {{ form_row(form.slot) }}
{% endif %}
